@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    List<Breweries.BreweryCollection> brew = (List<Breweries.BreweryCollection>)ViewData["BreweryCollection"];

    DetailBrewery.Brewery brewDetail = (DetailBrewery.Brewery)ViewData["Brewery"];



}

<a href="/" title="home" class="logo">
    <div class="logo">
        <img src="~/images/logo.jpg" width="200" alt="logo" />
        <h1>BreweryArc</h1>
    </div>
</a>


@if (brew == null)
{
        <p> Breweries not found.</p>
}

else
{
<div class="text-center">
    <h1 class="display-4">Brewery List</h1>
    <hr />
    <div>
        <table class="tablestyle">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Brewery Type</th>
                <th>Street</th>
                <th>Address 1st Part</th>
                <th>Address 2nd Part</th>
                <th>City</th>
                <th>State</th>
                <th>Postal Code</th>
                <th>Country</th>
                <th>Phone</th>
                <th>Website Url</th>
                <th>Update At</th>
                <th>Created At</th>

            </tr>
            @{
                foreach (Breweries.BreweryCollection brr in brew)
                {
                    <tr>
                        <td>@brr.Id</td>
                        <td>@brr.Name</td>
                        <td>@brr.BreweryType</td>
                        <td>@brr.Street</td>
                        <td>@brr.Address2</td>
                        <td>@brr.Address3</td>
                        <td>@brr.City</td>
                        <td>@brr.State</td>
                        <td>@brr.PostalCode</td>
                        <td>@brr.Country</td>
                        <td>@brr.Phone</td>
                        <td>@brr.WebsiteUrl</td>
                        <td>@brr.UpdatedAt</td>
                        <td>@brr.CreatedAt</td>

                    </tr>

                }
            }
        </table>
    </div>
</div>
}


@if(brewDetail == null)
  {
     <p> Brew Detail not found.</p>
  }

else { 

    <div class="text-center">
        <h1 class="display-4">Brewery Details</h1>
        <hr />
        <div>
            <table class="tablestyle">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Brewery Type</th>
                    <th>Street</th>
                    <th>Address 1st Part</th>
                    <th>Address 2nd Part</th>
                    <th>City</th>
                    <th>State</th>
                    <th>Postal Code</th>
                    <th>Country</th>
                    <th>Phone</th>
                    <th>Website Url</th>
                    <th>Update At</th>
                    <th>Created At</th>

                </tr>
                @{

                        <tr>
                            <td>@brewDetail.Id</td>
                            <td>@brewDetail.Name</td>
                            <td>@brewDetail.BreweryType</td>
                            <td>@brewDetail.Street</td>
                            <td>@brewDetail.Address2</td>
                            <td>@brewDetail.Address3</td>
                            <td>@brewDetail.City</td>
                            <td>@brewDetail.State</td>
                            <td>@brewDetail.PostalCode</td>
                            <td>@brewDetail.Country</td>
                            <td>@brewDetail.Phone</td>
                            <td>@brewDetail.WebsiteUrl</td>
                            <td>@brewDetail.UpdatedAt</td>
                            <td>@brewDetail.CreatedAt</td>

                        </tr>


                }
            </table>
        </div>
    </div>

}
