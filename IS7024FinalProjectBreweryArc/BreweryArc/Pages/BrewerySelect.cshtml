@page
@model BrewerySelect.Pages.BreweriesSelect
@{
    var Type = (List<Breweries.BreweryCollection>)ViewData["Brewery_Select"];

}

<div class="container">
    <br />
    <h2>Types of Brewery</h2>
    <div>
        <form method="get" class="row mb-3 ml-1">
            <div class="input-group row">
                <div class="col-sm-2 font-weight-bold">Choose Type of Brewery</div>
                <select class="form-control" name="query" asp-for="@Model.Type1" asp-items="ViewBag.Type1"></select>
                <div class="input-group-append">
                    <input type="submit" value="Search" class="btn btn-outline-secondary" />
                </div>
            </div>
        </form>
        @if (string.IsNullOrWhiteSpace(Model.Type1)) 
        {

        }
        else if (Type == null)
        {
            <div class="alert alert-info">Brewery Data for @Model.Type1 not found.</div>
        }
        else
        {

            <div>
                @{
                    foreach (Breweries.BreweryCollection type in Type)
                    {
                        <div class="row">
                            <div class="col-md-6">
                                <div class="card card-body shadow border-0" style="background-color: orange">
                                    <div class="subtitle lead">
                                        CUMULATIVE
                                    </div>
                                    <hr />
                                    <dl class="row">
                                        <dt class="col-sm-6">
                                            Brewery Name
                                        </dt>
                                        <dd class="col-sm-6">
                                            <a asp-page="./BrewerySingle" asp-route-id="@type.Id">@type.Name</a>
                                        </dd>
                                        <dt class="col-sm-6">
                                            Type
                                        </dt>
                                        <dd class="col-sm-6">
                                            @type.BrewerySelect
                                        </dd>
                                        <dt class="col-sm-6">
                                            City
                                        </dt>
                                        <dd class="col-sm-6">
                                            @type.City
                                        </dd>
                                        <dt class="col-sm-6">
                                            Country
                                        </dt>
                                        <dd class="col-sm-6">
                                            @type.Country
                                        </dd>

                                    </dl>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        }
    </div>
</div>